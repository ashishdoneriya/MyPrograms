#include<stdio.h>
 
char getchlin(void); /* Prototype */
 
int main(void)
{
char t;
t=getchlin(); /*invoke getchlin in Linux instead of getch in windows*/
return 0;
 
return 0;
}
 
char getchlin()  /*definition */
{
char c;/*return value*/
char test; /*to retain the screen*/
 
scanf("%c",&c);
scanf("%c",&test);
return (c);
}
 
